{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "preprod": "yarn migration:up",
    "prod": "node dist/src/main",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "tslint 'src/**/*.ts' -p ./tsconfig.json -c ./tslint.json --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "mikro-orm migration:up",
    "migration:down": "mikro-orm migration:down",
    "migration:list": "mikro-orm migration:list",
    "migration:pending": "mikro-orm migration:pending"
  },
  "dependencies": {
    "@nestjs/common": "7.0.6",
    "@nestjs/core": "7.0.6",
    "@nestjs/platform-express": "7.0.6",
    "@nestjs/platform-fastify": "^7.0.6",
    "@nestjs/swagger": "^4.5.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.0-rc.0",
    "fastify": "^2.13.0",
    "fastify-swagger": "^2.5.0",
    "mikro-orm": "^3.6.1",
    "mongodb": "3.5.5",
    "nestjs-mikro-orm": "^1.0.3",
    "pg": "^7.18.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.4",
    "uuid": "^7.0.2",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.1",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "^7.0.7",
    "@types/express": "4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "12.12.31",
    "@types/supertest": "2.0.8",
    "@types/uuid": "^7.0.2",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "import-sort-style-module": "^6.0.0",
    "jest": "25.2.3",
    "prettier": "2.0.2",
    "prettier-plugin-import-sort": "^0.0.4",
    "supertest": "4.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.8.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "^6.1.1",
    "tslint-react": "^4.2.0",
    "typescript": "3.7.2"
  },
  "importSort": {
    ".js, .ts,": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/db.config.ts",
      "./dist/config/db.config.js"
    ]
  }
}
